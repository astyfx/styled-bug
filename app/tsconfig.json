{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@containers": ["./containers"],
      "@styles": ["./styles"]
    },
    "rootDirs": ["src"],
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["./src/"],
  "skipLibCheck": true
}
